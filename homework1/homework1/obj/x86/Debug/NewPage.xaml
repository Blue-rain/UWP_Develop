<Page
    x:Class="homework1.NewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:homework1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock HorizontalAlignment="Left" Text="Title" TextWrapping="Wrap" VerticalAlignment="Top" Margin="250,204,0,0"/>
        <TextBox x:ConnectionId='1' x:Name="title" HorizontalAlignment="Left" Text="" VerticalAlignment="Top" Margin="250,229,0,0" Width="296"/>
        <TextBlock HorizontalAlignment="Left" Text="Detail" TextWrapping="Wrap" VerticalAlignment="Top" Margin="250,266,0,0"/>
        <TextBox x:ConnectionId='2' x:Name="detail" HorizontalAlignment="Left" Text="" VerticalAlignment="Top" Margin="250,291,0,0" Width="296" Height="72"/>
        <TextBlock HorizontalAlignment="Left" Text="Due Date" TextWrapping="Wrap" VerticalAlignment="Top" Margin="250,368,0,0"/>
        <DatePicker x:ConnectionId='3' x:Name="datePicker" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,393,0,0"/>
        <Button x:ConnectionId='4' x:Name="create"                Content="Create" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,430,0,0"/>
        <Button x:ConnectionId='5' x:Name="cancel"                Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="481,430,0,0"/>

    </Grid>
</Page>

